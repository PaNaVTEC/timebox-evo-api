    "nodemon": "^2.0.3",
    "prettier": "^2.0.5",
    "ts-node": "^8.10.1",
    "typescript": "^3.8.3"
  },
  "dependencies": {
    "bluetooth-serial-port": "^2.2.7",
    "express": "^4.17.1",
    "fp-ts": "^2.5.4",
    "fp-ts-contrib": "^0.1.15",
